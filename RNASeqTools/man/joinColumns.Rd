function (x, groups, fun = rowSums) 
{
    out <- vector("list", length(unique(groups)))
    for (level in unique(groups)) {
        ci <- which(groups == level)
        out[[level]] <- fun(x[, ci])
    }
    d <- as.data.frame(do.call(cbind, out))
    rownames(d) <- rownames(x)
    d
  }
}
